<!DOCTYPE html>
<html>
<head>
  <title>Caixa Objetivo</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="row-fluid">
  <%= render '/layouts/head_home' %>
</div>

<div class="container-fluid">
  <div class="row-fluid">
  
    <div class="span12 margin-message">
      
      <% if flash[:notice].present? %>
        <div class="alert alert-success margin-message">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <p id="notice"><%= flash[:notice] %> </p>
        </div>
      <% end %>
        
      <% if alert.present? %>
        <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
          <p id="alert"><%= alert %> </p>
        </div>
      <% end %>

    </div>

  </div>

</div>

<div class="container-fluid back-color-panel">

  <div class="row-fluid margin">
    <div class="span12 padding white">
        
      <%= link_to "Painel Principal", painel_main_index_path %>

    </div>
  </div>

  <!-- ROW -->
  <div class="row-fluid  margin">

    <div class="span12 ">
      

      <%= yield %>


    </div>

    </div>
    <!-- FIM ROW -->  
  </div>

<hr>

 <div class="footer">
 <p class="pull-right"><a href="#">Voltar para o topo</a></p>
  <p>&copy; Caixa Objetivo 2013</p>
</div>

</body>
</html>
